{
  "name": "Feedy",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Customize RSS feeds, get notifications and skim the news",
  "icons": {
    "128": "128.png",
    "48": "48.png",
    "16": "16.png"
  },
  "browser_action": {
    "default_icon":  "19.png",
    "default_title": "Feedy",
    "default_popup": "popup.html"
  },
  "background":{
      "persistent": true,
      "page" : "background.html"
  } ,
  "content_security_policy": "script-src 'self' https://www.google.com https://ssl.google-analytics.com; object-src 'self'",
  "homepage_url": "https://github.com/SJTUCat/Feedy",
  "permissions": [
    "notifications",
    "https://www.google.com/*",
    "https://ssl.google-analytics.com/*",
    "unlimitedStorage",
    "storage"
  ]
}
